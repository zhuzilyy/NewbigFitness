<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:scrollbars="none">

    <include layout="@layout/view_toolbar_btn_fragment"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:background="@color/lightblack">

    </LinearLayout>

    <com.guojunustb.library.WeekHeaderView
        android:id="@+id/weekheaderview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_40dp"
        app:firstDayOfWeek2="sunday"
        app:headerBackgroundColor="#ffffff"
        app:headerDayLabelNormalTextColor="#696969"
        app:headerDayLabelTextSize="12sp"
        app:headerWeekLabelTextColor="#696969"
        app:todayHeaderTextColor="@color/event_green"
        app:headerDayLabelTodayTextColor="#696969"
        app:headerFocusBackgroundColor="@color/event_green"
        app:headerFocusSameDayBackgroundColor="@color/event_green"
        app:headerFocusSameDayTextColor="#696969"
        app:headerFocusTextColor="@color/event_green"
        app:headerPaddingTop="10dp"
        app:headerRowGap="20dp"
        app:textSize="12sp"
        app:headerWeekLabelTextSize="12sp" />

   <!-- app:headerDayLabelNormalTextColor="@color/black"
    app:headerWeekLabelTextColor="@color/black"
    app:headerDayLabelTodayTextColor="#000000"
    app:headerFocusTextColor="#000000"
    app:headerFocusBackgroundColor="#000000"-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:layout_marginLeft="@dimen/dimen_40dp"
        android:background="@color/lightblack">

    </LinearLayout>

    <com.guojunustb.library.WeekDayView
        android:id="@+id/weekdayview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:visibility="visible"
        app:columnGap="8dp"
        app:dayBackgroundColor="#ffffffff"
        app:eventTextColor="@android:color/white"
        app:headerColumnBackground="#ffffffff"
        app:headerColumnPadding="8dp"
        app:headerColumnTextColor="@color/toolbar_text"
        app:headerRowBackgroundColor="#465a65"
        app:headerRowPadding="12dp"
        app:hourHeight="60dp"
        app:noOfVisibleDays="1"
        app:textSize="12sp"
        app:todayBackgroundColor="#1848adff"
        app:todayHeaderTextColor="@color/event_green" />

</LinearLayout>


