        <!--<item name="colorPrimary">@color/colorPrimary</item>-->
        <!--<item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
        <!--<item name="colorAccent">@color/colorAccent</item>-->
    <!--</style>-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/no_back</item>
        <item name="colorPrimaryDark">@color/no_back</item>
        <item name="colorAccent">@color/no_back</item>

    </style>
    <style name="ButtomDialog" parent="@android:style/Theme.Holo.Dialog">
        <!-- 是否有边框 -->
        <item name="android:windowFrame">@null</item>
        <!--是否在悬浮Activity之上  -->
        <item name="android:windowIsFloating">true</item>
        <!-- 标题 -->
        <item name="android:windowNoTitle">true</item>
        <!--阴影  -->
        <item name="android:windowIsTranslucent">true</item><!--半透明-->
        <!--背景透明-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 还可以加入一些弹出和退出的动画 (lan)-->

        <!-- Dialog进入及退出动画 -->
        <item name="android:windowAnimationStyle">@style/ActionSheetDialogAnimation</item>
    </style>
    <style name="ActionSheetDialogAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/actionsheet_dialog_in</item>
        <item name="android:windowExitAnimation">@anim/actionsheet_dialog_out</item>
    </style>
    <style name="MyCheckBox" parent="@android:style/Widget.CompoundButton.CheckBox">

        <item name="android:button">@drawable/checkbox</item>

        <item name="android:paddingLeft">25.0dip</item>

        <item name="android:maxHeight">10.0dip</item>

    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- toolbar 搜索框样式 -->
    <style name="toolbar_edit">
        <item name="android:layout_width">@dimen/dimen_192dp</item>
        <item name="android:layout_height">@dimen/dimen_36dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">@dimen/dimen_4dp</item>
        <item name="android:layout_margin">@dimen/dimen_4dp</item>
        <item name="android:background">@drawable/shape_search</item>
        <item name="android:drawableStart">@mipmap/edit_search</item>
        <item name="android:drawablePadding">@dimen/dimen_4dp</item>
        <item name="android:maxLines">1</item>

        <item name="android:textColor">@color/no_back</item>
        <item name="android:textSize">@dimen/dimen_16sp</item>
    </style>

    <style name="title_textview">主页</style>

    <!-- 统一按钮 -->
    <style name="normal_button">
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/dimen_20sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/shape_button</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--统一toolbar-->
    <style name="myToolbarNavigationButtonStyle" parent="@style/Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:minWidth">0dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:scaleType">centerInside</item>
    </style>





    <style name="switchColor">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">@dimen/dimen_14sp</item>
    </style>
    <style name="transparentFrameWindowStyle" parent="android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item><!--除去title-->
        <item name="android:windowBackground">@color/transparent</item>
    </style>

</resources>
