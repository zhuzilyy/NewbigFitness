<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_address_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.gufei.bigfitness.com.GuFei.Ui.AddressList.AddressDetails.AddressDetailsActivity">

    <include
        layout="@layout/view_toolbar_btn"
        android:layout_width="match_parent"
        android:layout_height="42dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <!--姓名-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:padding="10dp">


                <ImageView
                    android:id="@+id/user_name_img"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:scaleType="centerInside"
                    android:visibility="invisible"
                    android:src="@mipmap/right" />


                <TextView
                    android:id="@+id/user_name_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="5dp"

                    android:text="姓名"
                    android:textColor="#ff333333"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignBaseline="@+id/user_name_text"
                    android:layout_alignBottom="@+id/user_name_text"
                    android:layout_toLeftOf="@+id/user_name_img"
                    android:layout_marginLeft="@dimen/left_spacing"
                    android:layout_marginRight="10dp"
                    android:background="@null"
                    android:textColor="#ff333333"
                    android:enabled="false"
                    android:paddingLeft="@dimen/left_spacing"
                    android:text="-"
                    android:textAlignment="center"
                    android:textSize="14sp" />


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/bg_color"></LinearLayout>


            <!--性别-->
            <RelativeLayout
                android:id="@+id/user_sxy_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp">


                <ImageView
                    android:id="@+id/user_sxy_img"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:scaleType="centerInside"
                    android:src="@mipmap/right"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/user_sxy"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_toLeftOf="@id/user_sxy_img"
                    android:paddingLeft="@dimen/left_spacing"
                    android:textColor="#ff333333"
                    android:text="男" />

                <TextView

                    android:id="@+id/user_sex_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="5dp"
                    android:text="性别"
                    android:textColor="#ff333333"
                    android:textSize="14sp" />


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/bg_color"></LinearLayout>


            <!--联系电话-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp">


                <ImageView
                    android:id="@+id/collection_user_tel_img"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:scaleType="centerInside"
                    android:visibility="invisible"
                    android:src="@mipmap/right" />


                <TextView
                    android:id="@+id/collection_user_tel_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="5dp"
                    android:text="联系电话"
                    android:textColor="#ff333333"
                    android:textSize="14sp" />

                <!--<TextView-->
                <!--android:id="@+id/query_tel_btn"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="match_parent"-->
                <!--android:layout_alignParentRight="true"-->
                <!--android:layout_marginRight="@dimen/dimen_8dp"-->
                <!--android:padding="5dp"-->

                <!--android:background="@color/green_btn"-->
                <!--android:text="客户查重"-->
                <!--android:textColor="@color/white"/>-->

                <EditText
                    android:id="@+id/collection_user_tel"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@+id/collection_user_tel_img"
                    android:layout_marginLeft="@dimen/left_spacing"
                    android:layout_marginRight="10dp"
                    android:background="@null"
                    android:textColor="#ff333333"
                    android:enabled="false"
                    android:paddingLeft="@dimen/left_spacing"
                    android:text=""
                    android:textAlignment="center"
                    android:textSize="14sp" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/bg_color"></LinearLayout>
            <!--介绍人-->
            <RelativeLayout
                android:id="@+id/references_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/references_img"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:scaleType="centerInside"
                    android:visibility="invisible"
                    android:src="@mipmap/right" />

                <TextView
                    android:id="@+id/references_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="5dp"
                    android:text="介绍人"
                    android:textColor="#ff333333"
                    android:textSize="14sp" />

                <TextView

                    android:id="@+id/references"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/left_spacing"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/references_img"
                    android:textColor="#ff333333"

                    android:text="-" />


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/bg_color"></LinearLayout>
            <!--客户来源-->
            <RelativeLayout
                android:id="@+id/user_source_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">


                <ImageView
                    android:id="@+id/user_source_img"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:scaleType="centerInside"
                    android:visibility="invisible"
                    android:src="@mipmap/right" />


                <TextView
                    android:id="@+id/customer_source_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="5dp"
                    android:text="客户来源"
                    android:textColor="#ff333333"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/customer_source"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/left_spacing"
                    android:textColor="#ff333333"

                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_toLeftOf="@+id/user_source_img"
                    android:text="-" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/bg_color"></LinearLayout>
            <!--客户意愿-->
            <RelativeLayout
                android:id="@+id/customer_will_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">


                <ImageView
                    android:id="@+id/customer_will_img"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:scaleType="centerInside"
                    android:visibility="invisible"
                    android:src="@mipmap/right" />


                <TextView
                    android:id="@+id/customer_will_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="5dp"
                    android:text="客户意向"
                    android:textColor="#ff333333"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/customer_will"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/left_spacing"
                    android:textColor="#ff333333"

                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_toLeftOf="@+id/customer_will_img"
                    android:text="-" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/bg_color"></LinearLayout>
            <!--客户标识-->
            <RelativeLayout

                android:id="@+id/customer_identification_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">


                <ImageView
                    android:id="@+id/customer_identification_img"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:scaleType="centerInside"
                    android:visibility="invisible"
                    android:src="@mipmap/right" />

                <TextView
                    android:id="@+id/customer_identification"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/left_spacing"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_toLeftOf="@+id/customer_identification_img"
                    android:textColor="#ff333333"
                    android:text="-" />

                <TextView
                    android:id="@+id/customer_identification_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:text="客户标签"
                    android:textColor="#ff333333"
                    android:textSize="14sp" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/bg_color"></LinearLayout>
            <!--采集人员-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:padding="10dp">


                <!--<ImageView-->
                <!--android:id="@+id/collectors_btn"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="match_parent"-->
                <!--android:layout_alignParentRight="true"-->
                <!--android:src="@mipmap/right" />-->


                <TextView
                    android:id="@+id/collectors_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="5dp"
                    android:text="采集人员"
                    android:textColor="#ff333333"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/collectors"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"

                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/left_spacing"
                    android:layout_marginRight="28dp"
                    android:textColor="#ff333333"
                    android:text="-" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/bg_color"></LinearLayout>
            <!--会籍顾问-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:padding="10dp">


                <TextView
                    android:id="@+id/membership_consultant_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="5dp"
                    android:text="会籍顾问"
                    android:textColor="#ff333333"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/membership_consultant"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"

                    android:layout_marginLeft="@dimen/left_spacing"
                    android:layout_marginRight="28dp"
                    android:layout_marginTop="5dp"
                    android:textColor="#ff333333"
                    android:text="-" />

                <!--<ImageView-->

                <!--android:id="@+id/membership_consultant_btn"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="match_parent"-->
                <!--android:layout_alignParentEnd="true"-->
                <!--android:layout_alignParentTop="true"-->
                <!--android:src="@mipmap/right" />-->

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/bg_color"></LinearLayout>
            <!--会员卡类型-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:padding="10dp">


                <!--<ImageView-->
                <!--android:id="@+id/card_type_btn"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="match_parent"-->
                <!--android:layout_alignParentRight="true"-->
                <!--android:src="@mipmap/right" />-->


                <TextView
                    android:id="@+id/card_type_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="5dp"
                    android:text="会员卡类型"
                    android:textColor="#ff333333"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/card_type"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"

                    android:layout_marginLeft="@dimen/left_spacing"
                    android:layout_marginRight="28dp"
                    android:layout_marginTop="5dp"
                    android:textColor="#ff333333"
                    android:text="次卡" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/bg_color"></LinearLayout>
            <!--预售金额-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:padding="10dp">


                <!--<ImageView-->
                <!--android:id="@+id/prepare_money_btn"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="match_parent"-->
                <!--android:layout_alignParentRight="true"-->
                <!--android:src="@mipmap/right" />-->


                <TextView
                    android:id="@+id/prepare_money_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="5dp"
                    android:text="预售金额"
                    android:textColor="#ff333333"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/prepare_money"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"

                    android:layout_marginLeft="@dimen/left_spacing"
                    android:layout_marginRight="48dp"
                    android:layout_marginTop="5dp"
                    android:textColor="#ff333333"
                    android:text="200" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/prepare_money_text"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="28dp"
                    android:textColor="#ff333333"
                    android:text="元"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/bg_color"></LinearLayout>
            <!--备注-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp">


                <TextView
                    android:id="@+id/note_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:text="备注"
                    android:textColor="#ff333333"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/note_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/left_spacing"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@id/note_text"
                    android:background="@null"
                    android:textColor="#ff333333"
                    android:gravity="top"
                    android:includeFontPadding="false"
                    android:lines="3"
                    android:text=""
                    android:textSize="@dimen/dimen_14sp" />


            </RelativeLayout>


        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/lightblack"></LinearLayout>


</LinearLayout>
